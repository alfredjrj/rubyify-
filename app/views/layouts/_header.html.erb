<row>
             
       <% if  /(\/stores\/)\d+$/.match(request.path)   %>
              
        <div class="col-md-8">
            <nav class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                 
                    <a class="navbar-brand" >RUBYIFIED => STORES</a>
                   
                    <ul class="nav navbar-nav">
                        
                        <li class="nav-item">
                            <%= link_to "Discover",  stores_path %> 
                        </li>
               
                         <li class="nav-item">
                         <%= link_to 'Home',  root_path   %> 
                      </li>
                    </ul>
              
                    <ul class="nav navbar-nav navbar-right">
                       
                        <li class="nav-item">
                            <a class="nav-link" href="#about"> About</a>
                        </li>
                      
                       
                        <li class="nav-item">
                          <%= link_to ' Checkout',   store_orders_path(@store )    %>
                        </li>
                      
                    </ul>
                
                </div>
           </nav>
        </div>
        
       
      
        <% elsif   logged_in?   %>
    
           <div class="col-md-8">
                   
            <nav class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                 
                    <a class="navbar-brand" >RUBYIFIED => STORES</a>
                   
                    <ul class="nav navbar-nav">
                
                        <li class="nav-item">
                           <%= link_to 'Dashboard',   root_path   %>
                        </li>
               
                    </ul>
              
                    <ul class="nav navbar-nav navbar-right">
                       
                        <li class="nav-item">
                        <%= link_to 'Create Store',   new_user_store_path(current_user)    %>
                        </li>
                      
                        <li class="nav-item">
                        <a class="nav-link" href="#"><%= current_user.name  %>  </a>
                        </li>
                     
                        <li class="nav-item">
                        <%= link_to "Logout", logout_path, method: "delete" %>
                        </li>
                      
                        <li class="nav-item">
                        <a class="nav-link" href="#"></a>
                        </li>
                      
                    </ul>
                
                
                 </div>
             </div>
        </nav>
    
        <% else %> 
        
        <!-- gets rendered in checkout and discover-->
          <nav class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    
                    <a class="navbar-brand" >RUBYIFIED => STORES</a>
                    
                       <ul class="nav navbar-nav">
                        
                        <li class="nav-item">
                        <%= link_to "Home",  root_path %> 
                        </li>
                        <li class="nav-item">
                        <%= link_to "Discover",  stores_path %> 
                        </li>
                        
                        <% if @store.try(:present?) %> 
                            <li class="nav-item">
                            <%= link_to @store.name,  store_path(@store) %> 
                            </li>
                        <% end %> 
                        
                        </ul> 
                     <%= render "sessions/new" %>
                     
                </div>
            </nav>
        <% end %>
   
          
       
            
    
</row>
        
        