


<% @store.items.each do  |item| %>

   <%= link_to image_tag(item.image.url(:large)), item.image.url %>
  
   
    <h2><%= item.name %></h2>
    <p> Price $<%= item.price %> </p>
    <p> Quantity in stock: <%= item.quantity %> </p>
    <%= link_to "edit" , edit_store_item_path(@store, item) %> 
      <p> <%= link_to "delete", store_item_path(@store,item), method: :delete %></p>
     
<% end %> 